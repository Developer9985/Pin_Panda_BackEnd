<% include  ./partials/header.ejs%>

  <div class="w-full h-screen bg-center bg-cover bg-[url('https://i.pinimg.com/564x/7f/65/2e/7f652eb1f4928328c32f07771bb13726.jpg')] flex items-center justify-center">

    <div class="w-[27vw]  bg-white px-20 py-20 rounded-[30px]">
        <h1 class="text-4xl text-center tracking-tighter font-semibold text-zinc-800 capitalize leading-none py-3 " >Welcome to Pinpanda</h1>
        <form action="/login" method="post">
          <input class="border-2 rounded-[15px] block w-full px-5 py-3" type="text" name="username" placeholder="username" /><br>
          <input class="border-2 rounded-[15px] block w-full px-5 py-3" type="password" name="password" placeholder="Password" />
          <a class="mt-2 inline-block font-semibold text-zinc-900 py-3 " href="#">Forget password?</a>
          <input class="border-2 block w-full px-5 py-3 bg-red-600 text-white rounded-full" type="submit" value="login">
          <p class="text-xs font-semibold text-zinc-600 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy;Notice at collection.</p>
        </form>
        <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Don't have an account ?</a>
    </div>
    

  </div>

  

