<% include  ./partials/header.ejs%>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1" >
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center justify-center mt-20">
        <div class="relative">
            <span id="uploadicon" class="w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                <i class=" text-zinc-800 ri-pencil-fill"></i>
            </span>
            <div class="w-40 h-40 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover " src=" /images/uploads/<%=user.profileImage %>" alt="">
            </div>
        </div> 
        <h1 class="text-3xl font-semibold mt-5"><%=user.pname %></h1>
        <h3 class="text-md">@<%=user.username %></h3>
        <a href="/edit" class="px-7 py-2 bg-zinc-700 rounded-full text-sm font-semibold mt-5">Edit</a>
        <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-5" >Add new Pin</a>
    </div>

    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-52 h-56 bg-zinc-200 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover " src="/images/uploads/<%=user?.posts[0]?.image %>" alt="">
            </div>
            <a href="/show/posts" class=" inline-block text-xl font-semibold mt-3">Your Pins</a>
            <h5 class="text-sm font-medium"><%= user.posts.length %>Pins</h5>
           
        </div>
        <div class="card">
            <div class="w-52 h-56 bg-zinc-200 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover " src="https://i.pinimg.com/564x/51/6e/f0/516ef0825fe5eec1a24a0dc2ec69f09f.jpg" alt="">
            </div>
            <h3 class="text-xl font-semibold mt-3">All Pins</h3>
            <h5 class="text-sm font-medium opacity">28 Pins</h5>
        </div>
        
    </div>
</div>

<script>
    document.querySelector("#uploadicon").addEventListener( 'click', function() {

        document.querySelector("#uploadform input").click();
    })

    document.querySelector("#uploadform input").addEventListener("change" ,function(){
        document.querySelector("#uploadform").submit();
    })
</script>


<% include  ./partials/footer.ejs%>